<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="note_title_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/alata</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="note_content_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/alata</item>
        <item name="android:gravity">top|start</item>
    </style>

</resources>